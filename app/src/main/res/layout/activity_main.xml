            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/nen"
                android:orientation="horizontal">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="100dp"
                    android:layout_marginRight="100dp"
                    android:layout_weight="1"
                    android:background="@drawable/duongvienbutton"
                    android:drawableLeft="@drawable/ic_setting"
                    android:backgroundTint="#81BD82"
                    android:text="Cài đặt"
                    android:textAllCaps="false"
                    android:textColor="@color/text_white"
                    android:textSize="20dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-6dp"
            android:background="@color/text_white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:background="@drawable/nen"
                android:orientation="horizontal">
                <CheckBox
                    android:id="@+id/checkboxtay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ưu tiên bấm chuông bằng tay"
                    android:textColor="#0E0D0D"
                    android:textSize="20sp"
                    android:textStyle="bold"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/text_white"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/chuong1hoi5s"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:background="@drawable/nen"
                android:visibility="gone"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/bell_black"
                    android:text="Chuông(1 hồi 5s)"
                    android:textColor="#0E0D0D"
                    android:textSize="14sp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn12hoi"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/nen"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#0E0D0D"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn1hoi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:background="@drawable/button_color"
                android:text="1 hồi"
                android:textAllCaps="false"
                android:textColor="@color/text_white"
                android:textSize="20dp" /> <!-- Đặt màu trong file button_color -->
            />
            />

            <Button
                android:id="@+id/btn3hoi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:background="@drawable/button_color"
                android:text="2 hồi"
                android:textAllCaps="false"
                android:textColor="@color/text_white"
                android:textSize="20dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />
        </LinearLayout>
